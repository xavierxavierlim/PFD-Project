@{
    ViewData["Title"] = "Home";
}


<div class="text-center container-fluid">
    <h1 id="helloMessage">Hello Xavier,</h1>
    <h4 id="helloQuestion">What would you like to do today?</h4>
    <br />
    <br />
</div>

<div class="container" >
    <div class="row" style="display:flex; justify-content:center;">
        <div class="col-md-3">
            <div style="display: flex; flex-direction: column; align-items: center;">
                <p id="getCash" style="padding-bottom:20px; font-size:30px;"><b>Get Cash</b></p>
                <div class="card border-dark" style="width: 170px; height: 250px;">
                    <div class="card-body" style="text-align: center;">
                        <a id="withdrawCash" asp-controller="Home" asp-action="WithdrawAmount" style="font-size: 30px; text-decoration: none">Withdraw Cash</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-1">
            <div style="border-left: 2px solid black; height: 100%;"></div>
        </div>

        <div class="col-md-5">
            <div style="text-align: center;padding-bottom: 20px; font-size:30px;">
                <p id="nonCashService"><b>Non Cash Services</b></p>
            </div>
            <div style="display: flex; justify-content: center; gap: 65px;">
                <div class="card border-dark" style="width: 170px; height: 250px;">
                    <div class="card-body" style="text-align: center;">
                        <a id="activateCard" asp-controller="Home" asp-action="" style="font-size: 30px; text-decoration: none">Activate Card</a>
                    </div>
                </div>

                <div class="card border-dark" style="width: 170px; height: 250px;">
                    <div class="card-body" style="text-align: center;">
                        <a id="balanceEnquiry" asp-controller="Home" asp-action="" style="font-size: 30px; text-decoration: none">Balance Enquiry</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






