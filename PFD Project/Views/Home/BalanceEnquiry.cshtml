@model IEnumerable<PFD_Project.Models.Transactions>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="containerzj">
        <div class="summaryzj">
            <p class="headerzj">Here is your account summary,</p>
            <br />
            <div class="balance-section">
                <p class="titlezj">Account Balance:</p>
                <div class="balance-info">
                    <span class="placeholderzj">Your Account Balance</span>
                    <span class="placeholderzj">$@ViewData["HomeBalance"]</span>
                </div>
            </div>
            <br />
            <br />
            <div class="debt-section">
                <p class="titlezj">Outstanding Debt:</p>
                <div class="debt-info">
                    <span class="placeholderzj">Remaining Debt</span>
                    <span class="placeholderzj">$10.00</span>
                </div>
            </div>
        </div>
        <div class="vertical-linezj"></div>
        <div class="transaction-history">
            <p class="history-title">Transaction History</p>
            <div class="history-table">
                @foreach (var transaction in Model.OrderByDescending(t => t.TransactionDate))
                {
                    <div class="history-row">
                        <div class="placeholderzj history-placeholder">@Html.DisplayFor(modelItem => transaction.TransactionType)</div>
                        <div class="placeholderzj history-placeholder">@(((DateTime)transaction.TransactionDate).ToString("yyyy-MM-dd HH:mm:ss"))</div>
                        <div class="placeholderzj history-placeholder">@Html.DisplayFor(modelItem => transaction.Amount)</div>
                    </div>
                }
            </div>
        </div>
    </div>
