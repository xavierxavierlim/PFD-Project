@{
    ViewData["Title"] = "Balance Enquiry";
}
<div class="container" style="margin-top: 80px; display: grid; margin-left:50px;">
    <div class="col-md-6" style="width: 1000px;">
        <div class="card border-bold" style="height: 550px;">
            <div class="card-body" style="display: flex; flex-direction: row; align-items: flex-start; justify-content: space-between;">
                <div style="width: 100%; display: flex; flex-direction: column; align-items: flex-start;">
                    <span class="placeholder" style="color: black; background: transparent; margin-left:8.5%;">Your Account Summary:</span>
                    <span class="placeholder" style="color: black; background: transparent; margin-left:8.5%; margin-top:30px;">Account Balance:</span>
                    <div class="card border-bold" style="height:150px; margin-left:100px; width:150px; margin-top:10px;">
                        <div class="card-body">
                            <span class="placeholder" style="color:black; background:transparent; margin-left:20%; margin-top:45px;">$24,510.00</span>
                        </div>
                    </div>
                    <div class="card-body" style="display: flex; flex-direction: column; align-items: flex-start; margin-left:-20px;">
                        <span class="placeholder" style="color: black; background: transparent; margin-left:8.5%; margin-top:10px;">Outstanding Debt:</span>
                        <div class="card border-bold" style="height:150px; margin-left:100px; width:150px; margin-top:10px;">
                            <div class="card-body">
                                <span class="placeholder" style="color:black; background:transparent; margin-left:30%; margin-top:45px;">$10.00</span>
                            </div>
                        </div>
                    </div>
                </div>


                <div style="width: 100%; display: flex; flex-direction: column; align-items: flex-start;">
                    <span class="placeholder" style="color: black; background: transparent; margin-left:0%;">Your Transaction History:</span>
                    


                    <div class="divider" style="height: 547px; width: 1px; background-color: lightgrey;margin-left: -50px; margin-top:-530px;"></div>
                </div>
            </div>
        </div>
     </div>
</div>


