@model IEnumerable<PFD_Project.Models.Transactions>

@{
    ViewData["Title"] = "Balance Enquiry";
}
<div class="container" style="display: grid;justify-content: center;padding-top: 8%;width: fit-content;">
    <div class="col-md-6" style="width: 1000px;">
        <div class="card border-bold" style="height: 550px;">
            <div class="card-body" style="display: flex; flex-direction: row; align-items: flex-start; justify-content: space-between;">
                <div style="width: 100%; display: flex; flex-direction: column; align-items: flex-start;">
					<span class="placeholder" style="color: black; background: transparent; margin-left:8.5%;"><b>Your Account Summary:</b></span>
                    <span class="placeholder" style="color: black; background: transparent; margin-left:8.5%; margin-top:30px;">Account Balance:</span>
                    <div class="card border-bold" style="height:150px; margin-left:100px; width:150px; margin-top:10px;">
                        <div class="card-body">
                            <span class="placeholder" style="color:black; background:transparent; margin-left:20%; margin-top:45px;">$@ViewData["HomeBalance"]</span>
                        </div>
                    </div>
                </div>

                <div style="width: 100%; display: flex; flex-direction: column; align-items: flex-start;">
					<span class="placeholder" style="color: black; background: transparent; margin-left:0%;"><b>Your Transaction History:</b></span>
                    
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.TransactionType)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Amount)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TransactionDate)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TransactionType)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Amount)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TransactionDate)
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                    <div class="divider" style="height: 64ch;width: 1px;background-color: lightgrey;margin-left: -3vw;margin-top: -21ch;"></div>
                </div>
            </div>
        </div>
     </div>
</div>


