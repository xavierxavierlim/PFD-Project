@{
    ViewData["Title"] = "Transfer Confirmation";
}

<style>
    .placeholder {
        pointer-events: none; /* Add this line to make the span non-interactive */
    }
</style>

<div class="text-center container-fluid" style="margin-top:90px;">
    <p class="rTitle" id="transferConfirmation" style="margin-top:40px;">Transfer Confirmation</p>
</div>

<div class="container" style="margin-top: 30px; display: grid; margin-left: 275px;">
    <div class="col-md-6">
        <div class="card border-bold">
            <div class="card-body" style="min-height: 200px; display: flex; align-items: flex-start; justify-content: space-between;">
                <div style="display: flex; flex-direction: column; align-items: flex-start; position: relative;">
                    <p class="text" style="color: lightgray; margin-left: 0px;">Amount</p>
                    <span class="placeholder" style="color: black; background: transparent; margin-top: -5px; margin-left: 0px;">S$ 24,510.10</span>
                </div>
                <div class="divider" style="height: 200px; width: 1px; background-color: lightgray; position: relative; margin-left: -10px;">
                    <div class="circle" style="position: absolute; top: 50%; transform: translateY(-50%); left: -15px; width: 30px; height: 30px; border-radius: 50%; border: 1px solid gray; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-chevron-right" style="color: gray;"></i>
                    </div>
                </div>
                <div style="display: flex; flex-direction: column; align-items: flex-start; position: relative; margin-right: 10px;">
                    <p class="additional-text" style="color: lightgray;">To</p>
                    <span class="placeholder" style="color: black; background: transparent; margin-top: -5px; margin-right: 0px;">John Doe</span>
                    <span class="placeholder" style="color: black; background: transparent; margin-top: 0px; margin-right: 0px;">123-00000-00</span>
                    <span class="placeholder" style="color: black; background: transparent; margin-top: 0px; margin-right: 0px;">Citi SG</span>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container" style="margin-top: 20px; display: grid; margin-left: 275px;">
    <div class="col-md-6">
        <div class="card border-bold">
            <div class="card-body" style="min-height: 100px; display: flex; justify-content: space-between; align-items: center;">
                <p class="text" style="color: lightgray; margin-top: 20px; margin-left: 0px;">Payment mode</p>
                <span class="placeholder" style="color: black; background: transparent; margin-top: 0px; margin-right: 0px;">Non-immediate transfer</span>
            </div>
        </div>
    </div>
</div>

<button class="button" style="margin-top:20px; margin-left: 500px; min-width: 120px; background-color:lightgray; border:none;">
    <p class="text" style="text-align: center; margin-top: 10px; color:black;">Confirm</p>
</button>
