<!DOCTYPE html> <!--hello world-->
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PFD_Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PFD_Project.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="row my-3 mx-2">
            <div class="col text-left">
                <ul class="navbar-nav list-group-horizontal">
                    <li class="nav-item mx-1">
                        <a asp-area="" asp-controller="Home" asp-action="">Return pHolder</a>
                    </li>
                    <li class="nav-item mx-1">
                        <a asp-area="" asp-controller="Home" asp-action="">Log Out pHolder</a>
                    </li>
                </ul>
            </div>
            <div class="col text-right">
                <ul class="navbar-nav list-group-horizontal">
                    <li class="nav-item mx-1">
                        <button asp-area="" asp-controller="Home" asp-action="">Camera pHolder</button>
                    </li>
                    <li class="nav-item mx-1">
                        <button asp-area="" asp-controller="Home" asp-action="">Screen-Reader pHolder</button>
                    </li>
                    <li class="nav-item mx-1">
                        <button asp-area="" asp-controller="Home" asp-action="">Language pHolder</button>
                    </li>
                    <li class="nav-item mx-1">
                        <button asp-area="" asp-controller="Home" asp-action="">Adjust-screen pHolder</button>
                    </li>
                </ul>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - PFD_Project - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
